{
  "manifest_version": 3,
  "name": "Quick Helper",
  "description": "Quickly access your required data and boost your development speed.",
  "version": "1.0.0",
  "icons": {
    "16": "src/images/icon-16.png",
    "32": "src/images/icon-32.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "src/images/icon-16.png",
      "32": "src/images/icon-32.png",
      "48": "src/images/icon-48.png",
      "128": "src/images/icon-128.png"
    },
    "default_popup": "src/html/index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}